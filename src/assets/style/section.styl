section
  padding 3vh 5vw

  h2
    margin-bottom 2.5vh

  figure
    aspect-ratio 1/1
    border-radius calc(26px/2)
    overflow hidden
    margin-bottom 2vh
    img
      height 100%
      width 100%
      object-fit cover

    @media tablet-s
      border-radius calc(26px/1.5)
    @media tablet
      border-radius calc(26px/1)


  .tag
    margin-bottom calc(5px + .5vh)
    @media desktop-l
      margin-bottom calc(5px + 1vh)

  .title
    margin-bottom 1.5vh

  .text
    clamp3()

  .title
  .text
    padding-right 3vw

  @media tablet
    padding-top 5.5vh
    h2
      margin-bottom 4vh

  @media (min-width d-point)
    h2
      margin-bottom 4.5vh


  .articles
    @media tablet-s
      display: grid;
      grid-template-columns: repeat(2,1fr);
      gap: calc(16px/1.5)

      .article
        margin-bottom: 3vh

    @media tablet
      gap 16px

    @media desktop-s

      grid-template-columns: repeat(3,1fr)

      .text
        clamp4()


